---
import CloseHtmlIcon from './icons/CloseHtmlIcon.astro';
import MenuHtmlIcon from './icons/MenuHtmlIcon.astro';
---

<header>
  <input type="checkbox" id="jl-mobile-menu-checkbox" />
  <label for="jl-mobile-menu-checkbox" class="jl-menu-btn">
    <div class="jl-menu-icon-wrapper">
      <MenuHtmlIcon />
    </div>
    <div class="jl-close-icon-wrapper">
      <CloseHtmlIcon class="test" />
    </div>
  </label>

  <section>
    <slot />
  </section>
  <div class="jl-mobile-menu-container"></div>
</header>

<style>
  header {
    position: sticky;
    top: 0;
    background-color: var(--jl-color-bg);
    border-block-end: var(--jl-outline-w-sm) solid var(--jl-color-neutral);
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    height: var(--jl-mobile-nav-height);
    min-height: var(--jl-mobile-nav-height);
    width: 100%;
    z-index: 5;
  }

  @media (min-width: 768px) {
    header {
      display: none;
    }
  }

  #jl-mobile-menu-checkbox {
    display: none;
  }

  .jl-menu-btn {
    background: none;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    aspect-ratio: 1 / 1;
    border: none;
    border-radius: var(--jl-br-sm);
    color: var(--jl-color-text);
    cursor: pointer;
    font-size: 1.75rem;
    margin-inline-start: auto;
    margin-inline-end: var(--jl-spacing-sm);
    width: 44px;

    &:hover {
      background-color: var(--jl-color-bg-darker);
    }

    &:active {
      background-color: var(--jl-color-bg-dark);
    }
  }

  section {
    position: fixed;
    top: var(--jl-mobile-nav-height);
    left: -100dvw;
    background-color: var(--jl-color-bg-darker);
    border-radius: var(--jl-br-sm);
    box-shadow: var(--jl-elevation-2);
    margin: var(--jl-spacing-md);
    height: calc(
      100dvh - var(--jl-mobile-nav-height) - var(--jl-spacing-md) * 2
    );
    padding: var(--jl-spacing-lg) var(--jl-spacing-xl);
    transition: 0.4s left ease;
    width: calc(100dvw - var(--jl-spacing-md) * 2);
    z-index: 10;
  }

  .jl-close-icon-wrapper {
    display: none;
  }

  input:checked {
    & ~ section {
      left: 0;
    }

    & ~ label .jl-close-icon-wrapper {
      display: block;
    }

    & ~ label .jl-menu-icon-wrapper {
      display: none;
    }
  }
</style>
