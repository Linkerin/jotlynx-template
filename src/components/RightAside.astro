---
import type { MarkdownHeading } from 'astro'
import TOC from './TOC/TOC.astro'

type Props = {
    headings: MarkdownHeading[]
}

const {headings} = Astro.props
---

<aside id="jl-right-aside">
    <TOC headings={headings} />
</aside>

<style>
  aside {
    height: 100dvh;
    max-height: 100dvh;
    overflow-y: scroll;
    border-inline-start: var(--jl-outline-w-sm) solid;
    border-color: var(--jl-color-neutral);
    padding: var(--jl-spacing-sm) var(--jl-spacing-md);
    margin-block-start: var(--jl-spacing-md)
    width: 100%;
  }


</style>
