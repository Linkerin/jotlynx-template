---
import ToC from './ToC.astro';
import type { ToCProps } from './types';

type Props = ToCProps;

const { headings, title } = Astro.props;
---

<aside id="jl-right-aside">
  <ToC headings={headings} title={title} />
</aside>

<style>
  aside {
    position: sticky;
    top: var(--jl-header-height);
    border-inline-start: var(--jl-outline-w-sm) solid;
    border-color: var(--jl-color-neutral);
    height: calc(100dvh - var(--jl-header-height));
    overflow-y: scroll;
    padding: var(--jl-spacing-sm) var(--jl-spacing-md);
    width: min(18dvw, 260px);
  }

  @media (max-width: 1023px) {
    aside {
      display: none;
    }
  }
</style>
